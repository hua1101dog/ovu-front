<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">{{item.id?'编辑':'添加'}}实例</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form name="form" novalidate>
        <div class="row">
            <div class="form-group">
                <label class="col-xs-2 control-label required">实例名：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="item.name"
                           name="name" maxlength="15" required/>
                </div>
                <label class="col-xs-2 control-label required">队列标识：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="item.keyName"
                           name="keyName" maxlength="10" required/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">项目:
                </label>
                <div class="col-xs-10">
                    <a class='btn btn-success btn-sm' ng-click='choosePark()'><span class='glyphicon glyphicon-plus'></span>选择项目</a>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">
                </label>
                <div class="col-xs-10">
                    <div class="input-group">
                        <ul class="ul-persons">
                            <li class="item" ng-repeat="p in parks">{{p.parkName}}<a ng-click="delpark(parks,p)"><i class='fa fa-remove'></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--数据类型选择-->
            <div class="form-group">
            	<label class="col-xs-2 control-label">数据类型：</label>
            	
            	<div class="col-xs-9" style="padding-top: 7px;">
            		<div class="typeCla" ng-repeat="item in dataTypes">
	            		<i style="float:left;padding-right: 5px;" role="button" ng-click="checkOne(item)" ng-class="{'glyphicon-check':item.checked,'glyphicon-unchecked':!item.checked}" class="glyphicon"></i>
	            		<h6 class="text mo">{{item.dicItem}}</h6>
            		</div>
            	</div>
            </div>
            <div class="form-group">
                <label class="col-xs-2 control-label">备注：</label>

                <div class="col-xs-9">
                    <textarea type="text" style="height:100px;resize:vertical" class="form-control" ng-model="item.remark" maxlength="100"/>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save(form,item)">确定</button>
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>
<style>
    .ul-persons{
        list-style: none;
        float: left;
        padding: 0px;
    }
    .ul-persons li{
        margin: 5px;
        padding: 5px;
        float: left;
    }
    .ul-persons li.item{
        background-color: #F9F9F9;
        border: 1px solid #CCCCCC;
        border-radius: 4px;
        padding-left: 10px;
        padding-right: 10px;
    }
    .ul-persons li a{
        margin-left: 5px;
        cursor: pointer;
    }
    .typeCla{
    	width:80px;
    	float:left
    }
    .mo{
    	margin-top: 0;
    	margin-bottom: 0;
    }
</style>

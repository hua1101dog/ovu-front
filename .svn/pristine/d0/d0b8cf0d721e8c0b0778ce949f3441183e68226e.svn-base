<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">关联商品</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form name="form" novalidate style="padding-left: 15px;">

        <div class="form-group">
            <label class="col-xs-2 control-label required">产品分类：</label>
            <div class="col-xs-4">
                <select ng-model="item.cateId" class="form-control"
                        ng-change="changeCategory()">
                    <option value="">请选择</option>
                    <option ng-repeat="category in categoryList" value="{{category.id}}">{{category.cateName}}</option>
                </select>
            </div>
        </div>
        <div class="form-group" style="max-height: 400px;overflow-y: scroll">
            <div class="col-xs-4" ng-repeat="product in ProductList" style="min-height:138px;">
                <input type="checkbox" style="position: absolute;top: 43%;" ng-model="product.checked"
                       ng-click="checkItem(product,$index)"/>
                <img ng-src="{{product.imageUrl}}" style="width: 85%;margin-left: 20px;">
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="cancel()">确定</button>
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>


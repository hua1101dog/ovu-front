<div ng-controller="arrangeAuthCtrl">
    <div class="page-title">
        <div class="title_left">
            <h3>排班导入权限设置</h3>

        </div>
    </div>
 
    <div class="panel panel-default">
        <div class="panel-heading">排班权限列表
        <button class="btn btn-primary pull-right" ng-click="showModal()"  ng-disabled="!search.deptId">新增权限</button>
    </div>
        <div class="panel-body">
                <table class="table table-striped table-hover">
                  <thead>
                  <tr>
                    <th class="text-center">NO</th>
                    <th>部门</th>
                    <th>排班人</th>
                    <th>操作</th>
                   
                  </tr>
                  </thead>
                  <tbody>
                  <tr ng-if="!authList  || authList.length == 0">
                    <td colspan="100" class="text-center">暂无记录</td>
                  </tr>
                  <tr ng-repeat="item in authList track by $index">
                    <td class="text-center">{{$index + 1}}</td>
                    <td>{{item.deptName}}</td>
                    <td>
                        <span ng-repeat="v in item.persons track by $index">{{v.name}}<span ng-if="$index!==item.persons.length-1">,</span></span>
                    </td>
                    <td>
                      <a href='javascript:void(0)' class='btn btn-xs' ng-click="showModal(item)">编辑</a>
                      <a href='javascript:void(0)' class='btn btn-xs' ng-click="del(item)">删除</a>
                    </td>
                  </tr>
                  </tbody>
                </table>
               
              </div>
    </div>

</div>

<style>
    table tr th,
    table tr td {
        text-align: center;
    }
</style>
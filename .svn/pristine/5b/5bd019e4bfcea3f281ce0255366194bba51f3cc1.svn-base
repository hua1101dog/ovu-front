<script type="text/ng-template" id="selCamera.html">
<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">选择摄像头绑定</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
        <table class="table table-striped table-hover" style="margin-top: 10px; ">
                <thead class="title">
                    <tr>
                        <th ></th>
                        <th class="text-center">NO</th>
                        <th>摄像头名称</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="cameraList.length == 0">
                        <td colspan="100" class="text-center">暂无数据</td>
                    </tr>
                    <tr ng-repeat="item in cameraList"  ng-class="{'checkCustom':item.checked}" ng-click="checkOne(item)">
                        <td class="text-center">
                            <i role="button" 
                                ng-class="{'glyphicon-check':item.checked,'glyphicon-unchecked':!item.checked}"
                                class="glyphicon"></i>
                        </td>
                        <td class="text-center">{{$index + 1}}</td>
                        <td class="text-center">{{item.equipmentSimpleName}}</td>
                    </tr>
                </tbody>
        </table>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save(form,item)">确定</button>
    <button class="btn btn-primary" ng-click="delete()">删除区块</button>
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>
</script>


<style>
    .page-top {
        margin-top: 15px;
        padding: 20px 15px;
        padding-bottom: 0px;
        height: 55px;
        border: 1px solid #E6E9ED;
        background-color: #fff;
    }

    img.imgSize {
        width: 20px;
        height: 20px;
    }

    .table>tbody>tr.checkCustom {
        background-color: #DFF0D8
    }
</style>
<div class="modal-header">
	<button type="button" class="close" ng-click="cancel()">×</button>
	<h4 class="modal-title title-sm">{{item.id?'编辑':"添加"}}个人信息</h4>
  </div>
  <div class="modal-body container-fluid form-horizontal">
	<form name="form" novalidate>
        <div class="form-group">
            <div class="col-md-3" align="right"><label class="control-label required">用户名称:</label></div>
			<div class="col-md-8">
				<!-- <input type="text" ng-model="item.name"
                class="form-control ng-valid ng-empty" required /> -->
                <table-selector host="search"  host-text="'name'" host-url="url" callback="checkName"></table-selector>
			</div>	
        </div>
        <div class="form-group">
            <div class="col-md-3" align="right"><label class="control-label required">联系电话:</label></div>
			<div class="col-md-8">
                <input type="text" class="form-control" name="MOBILE" ng-model="item.phone"
                        ng-pattern="/^(1[34578]\d{9})$/" placeholder="请输入手机号码" required />
                    <span style="color:red" ng-show="form.MOBILE.$dirty && form.MOBILE.$invalid">
                        <span class="col-xs-12 control-label" style="color:red;text-align:left"
                            ng-show="form.MOBILE.$dirty && form.MOBILE.$invalid && form.MOBILE.$error.pattern"
                            style>请正确输入联系电话！</span>
                    </span>
			</div>	
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save(form, item)">确定</button>
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>

<style>
    .spantip {
        display: inline;
        color: red;
        margin-top: 8px;
        padding-left: 0px
    }

</style>

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">{{title}}</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form name="form" novalidate>
        <div>
            <h5>基本信息</h5>
            <div style="height:120px;">
                <div class="col-xs-3" style="width:110px;height:95px;"><img style="width:110px;height:95px;" ng-src="{{item.residentImg}}" alt="" /></div> 
                <div class="col-xs-9">
                    <div class="row">
                        <div class="col-xs-6">
                            <label class="col-xs-4">业主姓名：</label>
                            <div class="col-xs-8">{{item.residentName}}</div>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-4">性别：</label>
                            <div class="col-xs-8"><span ng-if="item.sex != 0">男</span><span ng-if="item.sex == 0">女</span></div> 
                            <!-- <div class="col-xs-8">{{item.sex == 0 ？"女" : "男"}}</div> -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <label class="col-xs-4">身份证号：</label>
                            <div class="col-xs-8">{{item.idCard}}</div>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-4">工作单位：</label>
                            <div class="col-xs-8">{{item.workUnit}}</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <label class="col-xs-4">联系电话：</label>
                            <div class="col-xs-8">{{item.mobile}}</div>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5">紧急联系电话：</label>
                            <div class="col-xs-7">{{item.contactPhone}}</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <label class="col-xs-4">园内住址：</label>
                            <div class="col-xs-8">{{item.address}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="margin-top:10px;">
            <h5>家庭成员信息</h5>
            <table class="table table-striped table-hover" style="margin-top:10px;">
                <thead class="title">
                    <tr>
                        <th>照片</th>
                        <th>姓名</th>
                        <th>性别</th>
                        <th>身份证号</th>
                        <th>与业主关系</th>
                        <th>工作单位</th>
                        <th>联系方式</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="info in pageModel.data">
                        <td><img style="width:30px;height:30px;" src="{{item.residentImg}}" alt=""></td>
                        <td>{{info.relationName}}</td>
                        <td>{{info.sex}}</td>
                        <td>{{info.idNumber}}</td>
                        <td>{{info.relationRole}}</td>
                        <td>{{info.relationUnit}}</td>
                        <td>{{info.relationTel}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <h5>业主车辆信息</h5>
            <table class="table table-striped table-hover" style="margin-top:10px;">
                <thead class="title">
                    <tr>
                        <th>车主</th>
                        <th>车牌号</th>
                        <th>车辆种类</th>
                        <th>品牌</th>
                        <th>型号</th>
                        <th>颜色</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- <tr ng-if="pageModel.data.length == 0"><td colspan="100" class="text-center">暂无记录</td></tr> -->
                    <tr>
                        <td>{{item.car_person}}</td>
                        <td>{{item.carId}}</td>
                        <td>{{item.car_category}}</td>
                        <td>{{item.logo}}</td>
                        <td>{{item.car_model}}</td>
                        <td>{{item.car_color}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label">审核结果：</label>
            <div class="col-xs-8">
                <input type="radio" ng-model="status" value="1"/>通过
                <input type="radio" ng-model="status" value="2"/>拒绝
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label">备注：</label>
            <!-- 查看审核详情 -->
            <div class="col-xs-8" style="display:inline-block">
                <span>{{remark}}</span>
            </div>
        </div>
    </form>
</div>

<div class="modal-header">
    <button class="close" type="button" ng-click="$ctrl.cancel()">×</button>
    <h4 class="modal-title" id="modal-title">{{$ctrl.title}}</h4>
</div>
<div class="modal-body edit-contact text-center" id="modal-body">
    <form name="editForm" novalidate="" style="margin:0;">
        <div class="form-group clearfix">
            <label for="protocolName" class="col-sm-3 control-label required text-right">协议名称：</label>
            <div class="col-sm-9">
                <input type="text" id="protocolName" class="form-control" required ng-trim="false" auto-focus="true" ng-model="$ctrl.item.protocolName">
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="col-sm-3 control-label required text-right">协议内容：</label>
            <div class="col-sm-9">
                <!-- 富文本编辑器 -->
                <div class="UM-Editor" ng-model="$ctrl.item.protocolContent">
                    <textarea type="text/plain"  id="myEditor" style="height:200px;">
                    </textarea>
                </div>
            </div>
        </div>
        <!-- <div class="form-group clearfix">
                    <label for="orderIndex" class="col-sm-3 control-label required text-right">排序号:</label>
                    <div class="col-sm-9">
                        <input type="number" id="orderIndex" class="form-control" required ng-trim="false" auto-focus="true" ng-model="$ctrl.item.orderIndex">
                    </div>
                </div> -->
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" type="button" ng-click="$ctrl.ok(editForm)">确定</button>
    <button class="btn btn-warning" type="button" ng-click="$ctrl.cancel()">取消</button>
</div>

<style>
   .UM-Editor  .edui-body-container a{
    color: #337ab7;
    text-decoration: underline;
    cursor: pointer;
   } 
</style>
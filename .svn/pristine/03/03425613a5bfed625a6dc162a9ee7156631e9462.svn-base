
<div class="modal-header">
        <h4 class="modal-title">资料库</h4>
    </div>
    <div class="modal-body container-fluid form-horizontal">
        <form name="form" novalidate>
            <div class="form-group">
                <label class="col-xs-4 control-label ">资料类别</label>
                <div class="col-xs-8">
                    <select class="col-xs-10 my-form-control" ng-disabled="canSelect" ng-model="matrialType" ng-change="getMaterialDbs()"
                        ng-options="o.key as o.value for o in MATERIALTYPE">
                    </select>
                </div>
            </div>
    
            <div class="form-group">
                <label class="col-xs-4 control-label ">资料库</label>
                <div class="col-xs-8">
                    <select class="col-xs-10 my-form-control" ng-model="search.folderId" ng-change="getMaterials()"
                        ng-options="o.id as o.folderName for o in MATERIALDBS">
                    </select>
                </div>
            </div>
          	<div class="form-group">
	            <div ng-if="pageModel.data && pageModel.data.length>0">
	            	<div class="col-xs-1"></div>
	            	<div ng-if="matrialType == 0" class="col-xs-10 center" style="border: 1px solid #cccccc;">
						<div ng-repeat="o in pageModel.data track by $index" class="img-show col-xs-2"> 
							<img alt="" onerror="javascript:this.src='/res/img/detail.png';"
			                     ng-click="showPhoto()"
			                     ng-src="{{processImgUrl(o.filePath,'50')}}" class="max-height:50px" style="width: 100px;
		    						height: 80px;"/>
							<input type="radio" name="selectedFile" ng-click="selectFile(o)" style="margin-left: 50%;"/>	    			
						</div>			
					</div>	
					<div ng-if="matrialType == 1" class="col-xs-10 center" style="border: 1px solid #cccccc;">
						<div ng-repeat="o in pageModel.data track by $index" class="img-show col-xs-2"
							style="width:100px;float: left;max-height: 120px;">
							<input type="radio" name="selectedFile" style="margin-left: 50%;"  ng-click="selectFile(o)"/>	    
							<a class="glyphicon glyphicon-list-alt" style="font-size:80px"></a>
							<span class="text-center nameSpan" title="{{o.fileName}}">{{o.fileName}}</span>
						</div>			
					</div>
					<div ng-if="matrialType == 2" class="col-xs-10 center" style="border: 1px solid #cccccc;">
						<div ng-repeat="o in pageModel.data track by $index" class="img-show col-xs-2"
							style="width:100px;float: left;max-height: 120px;">
							<input type="radio" name="selectedFile" style="margin-left: 50%;"  ng-click="selectFile(o)"/>	    
							<a class="glyphicon glyphicon-music" style="font-size:80px"></a>
							<span class="text-center nameSpan" title="{{o.fileName}}">{{o.fileName}}</span>
						</div>			
					</div>
					<div ng-if="matrialType == 3" class="col-xs-10 center" style="border: 1px solid #cccccc;">
						<div ng-repeat="o in pageModel.data track by $index" class="img-show col-xs-2"
							style="width:100px;float: left;max-height: 120px;">
							<input type="radio" name="selectedFile" style="margin-left: 50%;"  ng-click="selectFile(o)"/>	    
							<a class="glyphicon glyphicon-film" style="font-size:80px"></a>
							<span class="text-center nameSpan" title="{{o.fileName}}">{{o.fileName}}</span>
						</div>		
					</div>	
					<div ng-if="matrialType == 4" class="col-xs-10 center" style="border: 1px solid #cccccc;">
						<div ng-repeat="o in pageModel.data track by $index" class="img-show col-xs-2"
							style="width:100px;float: left;max-height: 120px;">
							<input type="radio" style="margin-left: 50%;" name="selectedFile" ng-click="selectFile(o)"/>	    
							<a class="glyphicon glyphicon-file" style="font-size:80px"></a>
							<span class="text-center nameSpan" title="{{o.fileName}}">{{o.fileName}}</span>
						</div>		
					</div>
	            </div>
	            <div ng-if="!pageModel.data || pageModel.data.length==0">
	            	<label class="col-xs-4 control-label ">文件列表</label>
					<div class="col-xs-8">
						<label class="text-info control-label">未选择资料库或资料库中无文件</label>
					</div>
	            </div>
	        </div>
            <div class="form-group" ng-if="pageModel.data && pageModel.data.length != 0">
	            <div class="col-xs-1" ></div>
				<div class="page-footer clearfix col-xs-10 center" >
	                <ng-include src="'/common/pager.html'"></ng-include>
	            </div>
	        </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="save()">确定</button>
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
    </div>
    <style>
    	.my-form-control {
		    display: block;
		    /*width: 100%;*/
		    height: 34px;
		    padding: 6px 12px;
		    font-size: 14px;
		    line-height: 1.42857143;
		    color: #555;
		    background-color: #fff;
		    background-image: none;
		    border: 1px solid #ccc;
		    border-radius: 4px;
		    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
		    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
		    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
		    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
		    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
		}
		.img-show {
		    /*width: 200px;*/
		    /*float: left;*/
		    margin: 16px 0px;
		}
		.nameSpan{
			display: inherit;
		    text-overflow: ellipsis;
		    white-space: nowrap;
		    overflow: hidden;
		}
    </style>
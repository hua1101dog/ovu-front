<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">|&nbsp;设置首次跟进计划</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form name="form" novalidate>
        <div class="form-group">
            <label class="col-xs-3 control-label required text-left">跟进人：</label>
            <div class="col-xs-9">
                <div class="input-group">
                    <input type="text" class="form-control ng-pristine ng-untouched ng-valid ng-empty" required readonly="readonly" placeholder="选择人员" ng-model="item.followUpPeopleName" name="followUpPeopleName" aria-invalid="false">
                    <span class="input-group-btn">
										<button class="btn btn-default" ng-click="choosePerson(item)"><i class="fa fa-search"></i></button>
									</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label required text-left">跟进时间：</label>
            <div class="col-xs-9">
                <input type="datetime" required class="form-control Wdate ng-pristine ng-valid ng-empty ng-touched"
                       ng-model="item.followUpOnTime" onchange=""
                       onclick="javascript:WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',maxDate:'%y-%M-%d'})"
                       aria-invalid="false">
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label required text-left">备注/原因：</label>
            <div class="col-xs-9">
                <textarea class="form-control" rows="6"   ng-model="item.remark" required name="remark"></textarea>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <div class="center-block" style="height:30px;">
        <button class="btn btn-primary" ng-click="saveprojectApproval(form,item)">确定</button>
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
    </div>
</div>

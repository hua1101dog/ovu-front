<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">关联空间选择</h4>
</div>
<div>
    <div class="form-group clearfix">
        <div class="form-inline text-nowrap">
            <div style="text-align: center">
                <h5 style="text-align: center">使用位置：</h5>
                <span class="text-nowrap">
                    <select class="form-control" ng-model="search.stageId" ng-change="geneBuild(search)" ng-options="o.id as o.text for o in floorTree track by o.id" >
                        <option value="">--期--</option>
                    </select>
                    <select class="form-control" ng-model="search.buildId" ng-change="geneSearchUnit(search)" ng-options="o.id as o.buildName for o in buildList track by o.id" >
                        <option value="">--栋--</option>
                    </select>
                    <select class="form-control" ng-model="search.unitNo" ng-change="geneSearchGround(search)" ng-options="o as o+'单元' for o in unitList" >
                        <option value="">--单元--</option>
                    </select>
                    <select class="form-control" ng-model="search.groundNo" ng-change="getHouseList(search)" ng-options="o as o+'楼' for o in groundList" >
                        <option value="">--楼--</option>
                    </select>
                    <select class="form-control" ng-model="search.houseId" ng-options="o.id as o.houseName for o in houseList" >
                        <option value="">--房号--</option>
                    </select>
                </span>
                <!-- <span class="text-nowrap">
                        <house-selector class="searchBox" form-bean="search"></house-selector>
                       
                    </span> -->
            </div>

        </div>
    </div>
    <div class="clearfix">
        <button class="btn btn-primary" style="float: right;margin-right: 20px" ng-click="finish()">完成</button>
    </div>
    <div class="modal-space">
        <h5 style="text-align: center">已选空间:</h5>
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>项目</th>
                    <th>使用位置</th>
                    <th>能耗占比</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in informArr">
                    <td>{{$index+1}}</td>
                    <td>{{item.parkName}}</td>
                    <td>{{item.location}}</td>
                    <td>    <span ng-show="item.seeScale">{{item.scale}}%</span>
                        <label class="required" ng-show="!item.seeScale"></label>
                        <input type="number" style="width:120px" ng-show="!item.seeScale" ng-model="item.scale" ng-pattern="/^100$|^(\d|[1-9]\d)(\.\d+)*$/"><span ng-show="!item.seeScale">%</span></td>
                    <td>
                        <a href='javascript:void(0)' ng-click='del($index)' class='btn btn-xs'><span class='fa fa-trash'></span>删除</a>
                        <a href="javascript:void(0)" ng-click="editBtn(item)" class="btn btn-xs" ng-show="item.seeScale">编辑</a>
                        <a href="javascript:void(0)" ng-click="saveBtn(item)" class="btn btn-xs" ng-show="!item.seeScale">保存</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save(form,item)">确定</button>
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>
<style>
    .modal-space {
        width: 80%;
        margin: 0 auto;
    }
    .modal-space table {
        width: 100%;
        margin: 0 auto;
        margin-bottom: 20px;
    }
</style>

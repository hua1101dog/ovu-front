<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">自定义搜索</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
     <form name="form" novalidate> 
    <table class="table table-striped table-hover" style="margin-top:10px">
        <thead>
            <tr>
                <th>NO</th>
                <th>数据项字典</th>
                <th>数据项名称</th>
                <th>数据项类型</th>
               
                <th>输入搜索条件</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-if="pageModel.data.length == 0 || !pageModel.data">
                <td colspan="100" class="text-center">暂无记录</td>
            </tr>
            <tr ng-repeat="item in pageModel.data">
                <td>{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                <td>{{item.dataItemCode}}</td>
                <td>{{item.dataItemName}}</td>
                <td>
                    <span ng-if="item.dataItemType == 1">文本型</span>
                    <span ng-if="item.dataItemType == 2">日期型</span>
                    <span ng-if="item.dataItemType == 3">金额型</span>
                    <span ng-if="item.dataItemType == 4">富文本型</span>
                </td>
                <td>
                    <div ng-show="item.dataItemType == 1"><input class="form-control"  style="width:150px;padding:5px 0;"  type="text" ng-model="item[item.dataItemCode]" /></div>
                    <div ng-show="item.dataItemType == 2"><input style="width:150px;" placeholder="开始日期" onchange="" type="datetime" class="form-control Wdate pull-left"  ng-model="item.startDate" onclick="javascript:WdatePicker({dateFmt:'yyyy-MM-dd'})"/><input style="width:150px;margin-left:20px;" type="datetime" onchange="" placeholder="结束日期" class="form-control Wdate pull-left" ng-model="item.deadDate" onclick="javascript:WdatePicker({dateFmt:'yyyy-MM-dd'})"/></div>
                    <div ng-show="item.dataItemType == 3"><input class="form-control pull-left" placeholder="   最小金额" style="width:150px;padding:5px 0;" type="number" min="0" ng-model="item.minMoney"  /><input class="form-control pull-left" type="number" min="0" placeholder="   最大金额" style="width:150px;padding:5px 0;margin-left:20px;" ng-model="item.maxMoney" /></div>
                    <div ng-show="item.dataItemType == 4"><input class="form-control" type="text" style="width:150px;padding:5px 0;" ng-model="item[item.dataItemCode]" /></div>
                </td>  
                <td>
                    <button class="btn btn-default" ng-disabled="!item.check" ng-click="addFind(item)">添加</button>
                    <!-- <a href="javascript:void(0)" ng-disabled="!item.check" ng-click="addFind(item)" class="btn btn-xs"><span class="fa fa-edit"></span>添加</a> -->
                </td> 
            </tr>
        </tbody>
    </table>
    <div class="page-footer clearfix">
        <ng-include src="'/common/pager.html'"></ng-include>
    </div>
     </form> 
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save(form)">确定</button> 
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>

<style>
    table tr th,
    table tr td {
        text-align: left;
    } 

</style>
<div ng-controller="checkCtrl">
    <div class="page-title">
        <div class="title_left">
            <h3>合同审批</h3>
        </div>
    </div>
    <div class="x_panel">
        <div class="form-inline">
            <div class="form-group">
                <label>分类名称</label>
                <input type="text" class="form-control" style="width:150px" ng-model="search.classifyName"/>
            </div>
            <div class="form-group">
                <label>合同名称</label>
                <input type="text" class="form-control" style="width:150px" ng-model="search.compactName"/>
            </div>
            <button class="btn btn-default" ng-click="find()">查询</button>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            审批列表
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover" style="margin-top:10px">
                <thead>
                    <tr>
                        <th>NO</th>
                        <th nowrap="nowrap">分类名称</th>
                        <th nowrap="nowrap">模版名称</th>
                        <th nowrap="nowrap">合同名称</th>
                        <th nowrap="nowrap">创建时间</th>
                        <th nowrap="nowrap">合同金额</th>
                        <th nowrap="nowrap">创建人</th>
                        <th nowrap="nowrap">当前流程</th>
                        <th nowrap="nowrap">合同状态</th>
                        <th nowrap="nowrap">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="!pageModel.data || pageModel.data.length == 0">
                        <td colspan="100" class="text-center">暂无记录</td>
                    </tr>
                    <tr ng-repeat="item in pageModel.data">
                        <td>{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                        <td>{{item.classifyName}}</td>
                        <td>{{item.templetName}}</td>
                        <td>{{item.compactName}}</td>
                        <td>{{item.createTime}}</td>
                        <td>{{item.compactMoney}}</td>
                        <td>{{item.userName}}</td>
                        <td style="color:red">{{item.stepName}}</td>
                        <td>{{item.statusName}}</td>
                        <td>
                            <a href="javascript:void(0)" ng-click="examInform(item)" class="btn btn-xs"><span class="fa fa-eye"></span>审批详情</a>
                            <a href="javascript:void(0)" ng-click="showProcess(item)" class="btn btn-xs"><span class="fa fa-eye"></span>审批流</a>
                            <a href="javascript:void(0)" ng-click="del(item)" class="btn btn-xs"><span class="fa fa-trash"></span>删除</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="page-footer clearfix">
                <ng-include src="'/common/pager.html'"></ng-include>
            </div>
        </div>
    </div>
</div>
<style>
    table tr th,
    table tr td {
        text-align: left;
    }
</style>

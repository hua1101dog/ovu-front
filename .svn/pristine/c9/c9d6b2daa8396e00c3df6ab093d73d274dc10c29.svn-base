
<div id="angularId" ng-controller="spaceIntroduceCtl" >
    <div class="page-title">
        <div class="title_left">
            <h3>空间介绍</h3>
        </div>
    </div>
    <div class="modal-body container-fluid form-horizontal" style="padding-right: 70px">
        <form name="form" novalidate>
            <div class="form-group">
                <label class="col-xs-2 control-label ">园区配套：</label>
                <div class="col-xs-4">
                    <div class="photoWraper-0" style="width: 100%" ng-repeat="p in pics1 track by $index">
                        <img style="width: 100%"
                             onerror="this.src='/res/img/detail.png';"
                             ng-click="showPhoto()"
                             ng-src="{{processImgUrl(p)}}"/>
                        <a role="button" class="close-0"  ng-click="delPhoto(pics1, p)"><i class="glyphicon glyphicon-remove"></i></a>
                    </div>
                    <img  ng-if="pics1.length<1" width="80px" src="/res/img/mbs/add.jpg" role="button"
                         ng-click="addPhotos(pics1,1,['.png','.jpg'])" title="上传图片">
                </div>
                <label class="col-xs-2 control-label ">园区服务：</label>
                <div class="col-xs-4">
                    <div class="photoWraper-0" style="width: 100%" ng-repeat="p in pics2 track by $index">
                        <img style="width: 100%"
                             onerror="this.src='/res/img/detail.png';"
                             ng-click="showPhoto()"
                             ng-src="{{processImgUrl(p)}}"/>
                        <a role="button" class="close-0"  ng-click="delPhoto(pics2, p)"><i class="glyphicon glyphicon-remove"></i></a>
                    </div>
                    <img ng-if="pics2.length<1" width="80px" src="/res/img/mbs/add.jpg" role="button"
                         ng-click="addPhotos(pics2,1,['.png','.jpg'])" title="上传图片">
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-2 control-label required">园区简介：</label>
                <div class="col-xs-10">
                    <textarea class="form-control" required name="" id="" cols="10" rows="10" ng-model="params.parkIntroduce"></textarea>
                </div>

            </div>
            <div class="form-group">
                <label class="col-xs-2 control-label required">交通：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="params.traffic" required/>
                </div>

                <label class="col-xs-2 control-label required">园区地址：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="params.houseAddr" required/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-2 control-label required">开发商：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="params.developer" required/>
                </div>

                <label class="col-xs-2 control-label required">物业公司：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="params.propertyCompany" required/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-2 control-label required">联系电话：</label>
                <div class="col-xs-4">
                    <input type="text" class="form-control" ng-model="params.phone"
                           required/>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="save(form)">保存</button>
    </div>
</div>
<style>
    .x-select input {
        position: absolute;
    }

    .x-select span.close {
        transform: translateY(3px);
    }

    .close-0{
        color: #fff;
        transform: translateX(-3px);
    }
    .photoWraper-0{
        position: relative;
        float: left;
        margin-right: 5px;
        text-align: center;
    }
    .photoWraper-0 a {
        position: absolute;
        top: 4px;
        right: 0px;
        cursor: pointer;
    }

</style>

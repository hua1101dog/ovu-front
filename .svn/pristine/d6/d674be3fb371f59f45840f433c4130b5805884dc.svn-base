<div class="modal-header">
	<button type="button" class="close" ng-click="cancel()">×</button>
	<h4 class="modal-title">{{item.replyStatus == 0 ? "回复" : "查看"}}留言</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
	<div class="col-md-12">
		<label class = "col-md-2">留言标题</label>
		<div class = "content col-md-6">{{item.title}}</div>
	</div>
	<div class="col-md-12">	
		<label class = "col-md-2">留言内容</label>
		<div class = "content col-md-6" ng-bind-html="item.content"></div>
	</div>
	<div class="col-md-12">
		<label class = "col-md-2">回复</label>
		<!-- <div id="new_message_um_container" class="col-md-6">
            <script type="text/plain" id="myEditor" style="width:620px;height:260px;"></script>
        </div> -->
        <textarea class = "col-md-6" rows="6" ng-if="item.replyStatus == 0" ng-model="item.approveContent"></textarea>
        <div class = "col-md-6 content" ng-if="item.replyStatus == 1">{{item.approveContent}}</div>
	</div>
</div>
<div class="modal-footer">
	<button class="btn btn-default" ng-if="item.replyStatus == 0"  ng-click="save()">确定</button>
	<button class="btn btn-info" ng-click="cancel()">取消</button> 
</div>
<style>
	label{
		line-height:30px;
		text-align:right;
	}
	div.content{
		line-height:30px;
	}
	 input.msgTitle{
        width: 200px;
        border-radius: 3px;
        border: 1px solid #eee;
        text-align: left;
        height:36px;
        line-height: 36px;
        color: #666;
    	font-size: 14px;
    }
    .edui-editor-body .edui-body-container p{
    	font-size:14px;
    }
</style>
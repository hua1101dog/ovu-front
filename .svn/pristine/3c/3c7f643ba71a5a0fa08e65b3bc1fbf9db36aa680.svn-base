<div ng-controller="checkSettingCtrl">
  <div class="page-title">
    <div class="title_left">
      <h3>签到设置</h3>
    </div>
  </div>
  <!-- <div class="row" ng-if="search.isGroup">
    <div class="col-xs-12">
      <label class="control-label">
        <i class="fa fa-map-marker" style="font-size: 15px;margin-right:5px"></i>
        <a role="button" ng-click="findPark(search,find)">{{search.parkName?search.parkName:'请选择项目'}} </a>
      </label>
    </div>
  </div> -->
  <div class="x_panel">
    <div class="form-inline">
        <div class="form-group">
            <label>签到点名称</label>
            <input type="text" class="form-control" placeholder="签到点名称" ng-model="search.checkInName" />
        </div>
        <button class="btn btn-default pull-right" ng-click="find(1)" >查询</button>
    </div>
</div>
  <div class="panel panel-default">
    <div class="panel-heading">签到设置列表
      <button class="btn btn-primary pull-right" ng-click="showModal()">签到点</button>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th class="text-center">NO</th>
          <th>项目名称</th>
          <th>签到点名称</th>
          <th>签到范围（米）</th>
          <th>签到地址</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-if="!pageModel.data  || pageModel.data.length == 0">
          <td colspan="100" class="text-center">暂无记录</td>
        </tr>
        <tr ng-repeat="item in pageModel.data">
          <td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
          <td>{{item.parkName}}</td>
          <td>{{item.checkInName}}</td>
          <td>{{item.checkInRange}}</td>
          <td>{{item.checkInAddress}}</td>
          <td>
            <a href='javascript:void(0)' class='btn btn-xs' ng-click="showModal(item,true)">编辑</a>
            <a href='javascript:void(0)' class='btn btn-xs' ng-click="del(item)">删除</a>
            <a href='javascript:void(0)' class='btn btn-xs' ng-click="showModal(item,false)">查看详情</a>
          </td>
        </tr>
        </tbody>
      </table>
      <div class="page-footer clearfix">
        <ng-include src="'/common/pager.html'"></ng-include>
      </div>
    </div>
  </div>
</div>
<style>
  table tr th, table tr td {
    text-align: center;
  }

  .AMap-wrapper {
    position: relative;
  }

  #tip {
    position: absolute;
    top: 2%;
    right: 18%;
    background-color: #ddf;
    color: #333;
    border: 1px solid silver;
    box-shadow: 3px 4px 3px 0px silver;
    border-radius: 5px;
    overflow: hidden;
    line-height: 20px;
    padding: 0 10px;
  }

  #tip input[type="text"] {
    height: 25px;
    border: 0;
    padding-left: 5px;
    width: 200px;
    border-radius: 3px;
    outline: none;
  }

  .amap-sug-result {
    z-index: 1050;
  }
  table tr th,
    table tr td {
        text-align: center;
    }
</style>

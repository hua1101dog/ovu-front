<div ng-controller="monitoringLogCtrl">
    <div class="page-title">
        <div class="title_left">
            <h3>操作日志监控</h3>
        </div>
    </div>
    <div class="x_panel">
        <div class="form-inline">
            <div class="form-group">
                    <label>操作名称</label>
                <input type="text" ng-model="search.operation" class="form-control"  />
            </div>
            <div class="form-group">
                    <label>操作url</label>
                <input type="text" ng-model="search.servletPath" class="form-control" />
            </div>
            <button class="btn btn-default" ng-click="find(1)">查询</button>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">操作日志列表</div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead class="title">
                    <tr>
                        <th class="text-center">NO</th>
                        <th>操作名称</th>
                        <th>操作url</th>
                        <th>平均响应时间</th>
                        <th>访问次数</th>
                        <th>查看历史访问记录</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="pageModel.data.length == 0">
                        <td colspan="100" class="text-center">暂无记录</td>
                    </tr>
                    <tr ng-repeat="item in pageModel.data">
                        <td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                        <td>{{item.operation}}</td>
                        <td>{{item.servletPath}}</td>
                        <td></td>
                        <td></td>
                        <td>
                            <a href='javascript:void(0)' ng-disabled="" ng-click='showEditModal(item)' class='btn btn-xs'><i class='fa fa-search'></i>访问记录</a>

                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="page-footer clearfix">
                <ng-include src="'/common/pager.html'"></ng-include>
            </div>
        </div>
    </div>
</div>
<div class="modal-header">
	<button type="button" class="close" ng-click="cancel()">×</button>
	<h4 class="modal-title">新增客户项目</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
	<div class="x_panel" style="display:none">
		<div class="form-inline">
			<div class="form-group">
				<label>名称:</label>
				<input type="text" class="form-control" name="name" ng-model="search.name" />
			</div>
			<button class="btn btn-default" ng-click="find()" >查询</button>
		</div>
	</div>
	<div class="panel panel-default" style="margin-bottom: 0px;">
		<div class="panel-heading">项目信息</div>
		
		<div class="panel-body">
			<table class="table table-striped table-hover" style="margin-top: 10px;">
				<thead class="title">
				<tr>
				<!--  
					<th ><input type="checkbox" ng-model="selectAll" ng-checked="select" ng-click="changeAll()"/></th>-->
					<th class="text-center" style="width:20px"><span role="button" ng-click="checkAll(pageModel)">
								<i class="glyphicon" ng-class="{'glyphicon-check':pageModel.checked,'glyphicon-unchecked':!pageModel.checked}"></i></span></th>
					<th class="text-center">NO</th>
					<th >项目名称</th>
					<th >项目类型</th>
					<th >占地面积</th>
					<th >项目地址</th>
					<th >联系人</th>
					<th >联系电话</th>
				</tr>
				</thead>
				<tbody>
				<tr ng-if="pageModel.data.length == 0"><td colspan="100" class="text-center">暂无记录</td></tr>
				<tr ng-repeat="item in pageModel.data">
					<!-- <td><input type="checkbox" ng-checked="isSelected" ng-click="changeOne()" ng-model="item.id" /></td> -->
					<td>
						<i role="button" ng-click="checkOne(item)" 
							ng-class="{'glyphicon-check':item.checked,'glyphicon-unchecked':!item.checked}" 
							class="glyphicon"></i>
					</td>
					<td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
					<td>{{item.projectName}}</td>
					<td>{{item.type}}</td>
					<td>{{item.coverArea | number:2}}</td>
					<td>{{item.projectAddress}}</td>
					<td>{{item.contact}}</td>
					<td>{{item.phone}}</td>
				</tr>
				</tbody>
			</table>
			<div class="page-footer clearfix">
				<ng-include src="'/common/pager.html'"></ng-include>
			</div>
		</div>
	</div>
	
	<div class="modal-footer">
		<button class="btn btn-primary" ng-click="save()">添加</button>
		<button class="btn btn-warning" ng-click="cancel()">取消</button>
	</div>
</div>

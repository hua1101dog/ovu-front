<div class="modal-header">
	<button type="button" class="close" ng-click="cancel()">×</button>
	<h4 class="modal-title">{{item.ID?'编辑':'新增'}}岗位</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
	<form name="form" novalidate>
		<div class="item form-group">
			<label class="control-label col-md-3 col-sm-3 col-xs-12 required">名称:
			</label>
			<div class="col-md-6 col-sm-6 col-xs-12">
				<input type="text" name="postName" ng-model="item.postName" required
					maxLength="20" class="form-control col-md-7 col-xs-12" >
			</div>
		</div>
		<div class="item form-group">
			<label class="control-label col-md-3 col-sm-3 col-xs-12">岗位描述</label>
			<div class="col-md-6 col-sm-6 col-xs-12">
				<textarea ng-model="item.description" name="description" class="form-control"
						  rows="5" maxlength="64"></textarea>
			</div>
		</div>
		<div class="form-group" ng-repeat="module in modules" >
            <label class="col-xs-4 control-label">{{module.name}}：</label>
            <div class="col-xs-8 mt7">
					<span ng-repeat="role in module.roles" class="mr15" ng-class="{'text-success':role.checked,'text-muted':!role.checked}" role="button"
                          ng-click="role.checked = !role.checked" >
					<i class="glyphicon" ng-class="{'glyphicon-check':role.checked,'glyphicon-unchecked':!role.checked}" ></i>{{role.name}}</span>
            </div>
        </div>
		<div class="modal-footer">
			<button class="btn btn-primary" ng-click="save(form,item)">确定</button>
			<button class="btn btn-warning" ng-click="cancel()">取消</button>
		</div>
	</form>
</div>

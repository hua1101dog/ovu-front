<!-- 租户管理 -->
<div ng-controller="tenantCtrl">
    <div class="page-title">
        <div class="title_left">
            <h3>租户管理</h3>
        </div>
    </div>
    <div class="row" ng-if="search.isGroup">
        <div class="col-xs-12">
            <label class="control-label">
                <i class="fa fa-map-marker" style="font-size: 15px;margin-right:5px"></i>
                <a role="button" ng-click="findPark(search,find)">{{search.parkName?search.parkName:'请选择项目'}} </a>
            </label>
        </div>
    </div>
    <div class="x_panel">
        <div class="form-inline">
            <div class="form-group">
                <input type="text" ng-model="search.tenantName" class="form-control" placeholder="租户姓名" />
                <input type="text" ng-model="search.houseNo" class="form-control" placeholder="房屋编号" />
                <input type="text" ng-model="search.ownerName" class="form-control" placeholder="业主姓名" />
            </div>

            <button class="btn btn-default" ng-click="find(1)">查询</button>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            租户列表
            <!-- <button class="btn btn-primary pull-right" ng-click="showAddModal()" ng-disabled="!search.parkId">添加租户</button>
            <button class="btn btn-primary pull-right" ng-disabled="!hasChecked(pageModel)" ng-click="delAll()">批量删除</button> -->
            <!--<button class="btn btn-primary pull-right" ng-disabled="!hasChecked(pageModel)" ng-click="outputAll()">批量导出</button>-->
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover" style="margin-top: 10px;">
                <thead class="title">
                    <tr>
                        <th class="text-center">NO</th>
                        <!-- <th class="text-center" style="width:20px">
                            <span role="button" ng-click="checkAll(pageModel)">
                                <i class="glyphicon" ng-class="{'glyphicon-check':pageModel.checked,'glyphicon-unchecked':!pageModel.checked}"></i>
                            </span>
                        </th> -->
                        <th>租户姓名</th>
                        <th>房屋编号</th>
                        <th>是否有效</th>
                        <th>租户电话</th>
                        <th>租户身份证号</th>
                        <th>业主电话</th>
                        <th>业主姓名</th>
                        <th>租房时间</th>
                        <th>退房时间</th>
                        <!-- <th>操作</th> -->
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="!pageModel.data  || pageModel.data.length == 0">
                        <td colspan="100" class="text-center">暂无记录</td>
                    </tr>
                    <tr ng-repeat="item in pageModel.data">
                        <td class="text-center">{{$index +1+pageModel.pageSize*pageModel.pageIndex}}</td>
                        <!-- <td>
                            <i role="button" ng-click="checkOne(item,pageModel)" ng-class="{'glyphicon-check':item.checked,'glyphicon-unchecked':!item.checked}"
                                class="glyphicon"></i>
                        </td> -->
                        <td>{{item.tenantName}}</td>
                        <td>{{item.houseNo}}</td>
                        <td>{{item.status =='0' ? "无效" : "有效"}}</td>
                        <td>{{item.tenantTel}}</td>
                        <td>{{item.tenantIdcard}}</td>
                        <td>
                            <span ng-repeat="v in item.ownerTel track by $index" style="display:block">{{v}}</span>
                        </td>
                        <td>
                            <span ng-repeat="v in item.ownerName track by $index" style="display:block">{{v}}</span>
                        </td>
                        <td>
                            <span ng-repeat="v in item.beginTime track by $index" style="display:block">{{v | date:'yyyy-MM-dd HH:mm:ss'}}</span>

                            <td>
                                <span ng-repeat="v in item.endTime track by $index" style="display:block">{{v | date:'yyyy-MM-dd HH:mm:ss'}}</span>

                            </td>
                            <!-- <td>
                            <a href='javascript:void(0)' ng-click='showAddModal(item)' class='btn btn-xs'>
                                <span class='fa fa-edit'></span>编辑</a>
                            <a href='javascript:void(0)' ng-click='del(item)' class='btn btn-xs'>
                                <span class='fa fa-trash'></span>删除</a>
                        </td> -->
                    </tr>
                </tbody>
            </table>
            <div class="page-footer clearfix">
                <ng-include src="'/common/pager.html'"></ng-include>
            </div>
        </div>
    </div>
</div>

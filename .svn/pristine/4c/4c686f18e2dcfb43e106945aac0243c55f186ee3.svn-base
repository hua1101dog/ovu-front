<!--新增回路弹出框  -->
<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">新增回路</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form name="form" style="padding: 0 20px">

        <div class="form-group">
            <label class="required col-xs-3 control-label">回路名称</label>
            <div class="col-xs-8">
                <input type="text" class="form-control" required ng-model="item.loopName"  />
            </div>
        </div>
        <div class="form-group">
            <label class="required col-xs-3 control-label">关联仪表</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="item.outMeterName" required readonly>
                    <span class="input-group-btn">
                        <button class="btn btn-default" ng-click="chooseByq(item.monitorMeterId,item.monitorMeterName)"><i
                                class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </form>


</div>
<div style="text-align: center;padding: 10px 0">
    <button class="btn btn-primary" style="margin: 0 10px" ng-click="save(form,item)">确定</button>
    <button class="btn btn-danger" style="margin: 0 10px" ng-click="delete(item.loopId)" ng-if="item.loopId">删除</button>
    <button class="btn btn-warning" style="margin: 0 10px" ng-click="cancel()">取消</button>
</div>

<div ng-controller="customerCtl" >
	<div class="page-title">
		<div class="title_left">
			<h3>客户信息</h3>
		</div>
	</div>
	<div class="x_panel" >
		<div class="form-inline">
			<div class="form-group">
				<label>客户名称:</label>
				<input type="text" class="form-control" name="name" ng-model="search.name" />
			</div>
			<div class="form-group">
				<label>客户类型</label>
				<select class="form-control" ng-model="search.customerTypeId" ng-options="o.id as o.name for o in customerTypeList">
					<option value="">--请选择--</option>
				</select>
			</div>
			<button class="btn btn-default" ng-click="find()" >查询</button>
		</div>
	</div>
	<div class="panel panel-default" style="margin-bottom: 0px;">
		<div class="panel-heading">客户信息列表
			<button class="btn btn-primary pull-right" ng-click="showEditModal()" >添加</button>
		</div>
		<div class="panel-body">
			<table class="table table-striped table-hover" style="margin-top: 10px;">
				<thead>
				<tr>
					<th class="text-center">NO</th>
					<th nowrap="nowrap">客户名称</th>
					<th nowrap="nowrap">客户类型</th>
					<th nowrap="nowrap">主联系人</th>
					<th nowrap="nowrap">联系电话</th>
					<th nowrap="nowrap">联系人职位</th>
					<th nowrap="nowrap">备注</th>
					<th nowrap="nowrap">操作</th>
				</tr>
				</thead>
				<tbody>
				<tr ng-if="pageModel.data.length == 0"><td colspan="100" class="text-center">暂无记录</td></tr>
				<tr ng-repeat="item in pageModel.data">
					<td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
					<td>{{item.name}}</td>
					<td>{{item.customerTypeName}}</td>
					<td>{{item.contactName}}</td>
					<td>{{item.contactMobile}}</td>
					<td>{{item.contactPosition}}</td>
					<td>{{item.remark}}</td>
					<td>
						<a href='javascript:void(0)' ng-click='showEditModal(item)' class='btn btn-xs'><span class='fa fa-edit'></span>编辑</a>
						<a href='javascript:void(0)' ng-click='redirectProjectPage(item)' class='btn btn-xs'><span class='fa fa-edit'></span>项目管理</a>
						<a href='javascript:void(0)' ng-click='redirectContactPage(item)' class='btn btn-xs'><span class='fa fa-edit'></span>联系人管理</a>
						<a href='javascript:void(0)' ng-click='del(item)' class='btn btn-xs'><span class='fa fa-trash'></span>删除</a>
					</td>
				</tr>
				</tbody>
			</table>
			<div class="page-footer clearfix">
				<ng-include src="'/common/pager.html'"></ng-include>
			</div>
		</div>
	</div>
</div>
<style>
   
	table tr th,
	table tr td {
		text-align: left;
	}
</style>
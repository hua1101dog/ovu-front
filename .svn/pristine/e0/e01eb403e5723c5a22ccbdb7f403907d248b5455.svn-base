<!-- 备忘录查询 -->
<div ng-controller="ownermemoCtrl">
    <div class="x_panel">
	    <div class="form-inline">
	        <div class="form-group">
	            <input type="text" ng-model="search.content" class="form-control" placeholder="备忘录内容" />
	
	        </div>
	        <button class="btn btn-default" ng-click="find(1)">查询</button>
	    </div>
	</div>
    <div class="panel panel-default" style="display: grid;">
        <div class="panel-heading">备忘录列表
                <button class="btn btn-success pull-right" ng-disabled="!search.houseId" ng-click="showMemoEditModal()" >新增</button>
        </div>
        <div class="panel-body" style="overflow: scroll;">
            <table class="table table-striped table-hover" style="margin-top: 10px;">
                <thead>
                    <tr>
                        <th class="text-center">NO</th>
                       
                       
                        <th style="width: 120px;">操作人姓名</th>
                        <th>备忘录内容</th>
                        
                        <th style="width: 200px;">创建时间</th>
                        <th style="width: 105px;">操作</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="!pageModel_memo.data  || pageModel_memo.data.length == 0">
                        <td colspan="100" class="text-center">暂无记录</td>
                    </tr>
                    <tr ng-repeat="item in pageModel_memo.data">
                        <td class="text-center">{{$index + 1+pageModel_memo.pageSize*pageModel_memo.pageIndex}}</td>
                              <td style="width: 120px;">{{item.personName}}</td>
                             <td ng-if="item.content.length>=60"  ng-class="{'border-t-0':$index==0}">
                                 
                                   <on-detail titles="备忘录内容" value="{{item.content}}">

                                   </on-detail>
                                </td>
                                 <td ng-if="item.content.length<60">
                                    {{item.content}}</td>
                        <td style="width: 200px;">{{item.createTime}}</td>
                        <td  style="width: 105px;">
                             
                                <a href='javascript:void(0)' ng-click='showMemoEditModal(item)'  class='btn btn-xs'><span class='fa fa-edit'></span>编辑</a>
                                <a href='javascript:void(0)' ng-click='delete(item.id)'  class='btn btn-xs'><span class='fa fa-delete'></span>删除</a>
                               
                            </td>
                       
                      
                       
                       
                    </tr>
                </tbody>
            </table>
            <div class="page-footer clearfix">
                <page-pro page-model="pageModel_memo"></page-pro>
            </div>
        </div>
    </div>
</div>


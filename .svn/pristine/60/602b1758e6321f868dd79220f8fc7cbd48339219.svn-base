<div class="modal-header">
    <button type="button" class="close" ng-click="vm.cancel()">×</button>
    <h4 class="modal-title">{{item.id?'编辑':'添加'}}推送地址</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form name="form" novalidate>
        <div class="form-group">
            <label class="col-xs-2 control-label required">名称：</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" ng-model="item.name" required>
            </div>
        </div>
        <div  class="form-group">
            <label class="col-xs-2 control-label required">推送地址：</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" ng-model="item.url" required >
            </div>
        </div>
        <div  class="form-group">
            <label class="col-xs-2 control-label required">数据类型：</label>
            <div class="col-xs-10">
                <select class="form-control" ng-model="item.urlType" required ng-options="o.id as o.text for o in companyEnum">
                    <option value="">--请选择--</option>
                </select>
            </div>
        </div>
        <div  class="form-group">
            <label class="col-xs-2 control-label ">内网代理：</label>
            <div class="col-xs-10">
                <select class="form-control" ng-model="item.proxyCode" ng-options="o.proxyCode as o.name for o in proxyList">
                    <option value="">--请选择--</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label text-nowrap required">关联项目编码：</label>
            <div class="col-xs-10">
                <textarea type="text" style="height:50px;resize:none" required placeholder='项目编码,以","分隔' class="form-control" ng-model="item.parkNos" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label">备注：</label>
            <div class="col-xs-10">
                <textarea type="text" style="height:50px;resize:none" class="form-control" ng-model="item.comment" />
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="vm.save(form,item)">确定</button>
    <button class="btn btn-warning" ng-click="vm.cancel()">取消</button>
</div>

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h3 class="modal-title">房屋收费项目</h3>
</div>
<div class="modal-body form-horizontal">
    <div class="panel-heading" style="color: #999999;">
        房屋收费项目设置详情
    </div>
    <div class="panel-body" style="overflow: auto">
        <table class="table table-striped table-hover" style="margin-top: 10px;">
            <thead class="title">
                <tr>
                    <th style="width:50px;">No.</th>
                    <th>项目名称</th>
                    <th>收费项目价格</th>
                    <th>不含税价格</th>
                    <th>计费单位</th>
                    <th>收费方式</th>
                    <th>计费方式</th>
                    <th>是否启动</th>
                    <!--<th>减免额</th>
                    <th>减免折扣</th>-->
                    <th>备注</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-if="!pageModel.data||pageModel.data.length == 0">
                    <td colspan="100" class="text-center">暂无记录</td>
                </tr>
                <tr ng-repeat="item in pageModel.data track by $index" ng-if="!item.edit">
                    <td>{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                    <td>{{item.expenseChildType.chargeName}}</td>
                    <td>{{item.expenseChildType.price}}</td>
                    <td>{{item.expenseChildType.noTaxPrice}}</td>
                    <td>{{item.expenseChildType.chargeUnit | billUnit}}</td>
                    <td>{{item.expenseChildType.payType | chargeMethod}}</td>
                    <td>{{item.expenseChildType.chargeWay | billMode}}</td>
                    <td>{{item.expenseChildType.isUsing === 1 ? '是' : '否'}}</td>
                   <!-- <td>{{item.deductions || '&#45;&#45;'}}</td>
                    <td>{{item.discount || '&#45;&#45;'}}</td>-->
                    <td>{{item.remark || '--'}}</td>
                    <td class="text-left">
                        <a href="javascript:void(0)" ng-click="delete(item.id)" class="btn btn-xs" style="border: 1px solid #5692ea; color: #5692ea;">删除</a>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="page-footer clearfix">
            <ng-include src="'/common/pager.html'"></ng-include>
        </div>
    </div>
</div>
<div class="modal-footer" style="text-align: center;">
    <button class="btn btn-danger btn-lg" ng-click="cancel()">关闭</button>
</div>

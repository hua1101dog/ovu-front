<div class="modal-header">
	<button type="button" class="close" ng-click="cancel()">×</button>
	<h4 class="modal-title">查看租户详细信息</h4>
</div>
 <div class="modal-body container-fluid form-horizontal">
	 <div class="x_panel" >  							
		<table class="table table-striped table-hover" style="margin-top:10px;">
			<thead class="title">
				<tr>					
					<th class="text-center">No.</th>
					<th>名称</th>
					<th>登录账号</th>
					<th>联系人</th>
					<th>联系方式</th>
					<th>租住空间</th>									
				</tr>
			</thead>
			<tbody>
			 <tr ng-if="!pageModel.data||pageModel.data.length == 0"><td colspan="100" class="text-center">暂无记录</td></tr> 
				 <tr ng-repeat="item in pageModel.data">
					<td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
					<td>{{lease.NAME ? lease.NAME:''}}</td>
					<td>{{lease.LOGIN_NAME ? lease.LOGIN_NAME:''}}</td>
					<td>{{lease.LINKMAN ? lease.LINKMAN : lease.NAME}}</td>						
					<td>{{lease.MOBILE ? lease.MOBILE : lease.PHONE}}</td>
					<td>{{item.STAGE_NAME + " " + item.FLOOR_NAME + "栋  " + item.HOUSE_NAME + "室"}}</td>											
				</tr>							
			</tbody>
		</table>
		<div class="page-footer clearfix" style="margin-left:8%;margin-top:-20px;">
			<ng-include src="'/common/pager.html'" class="ng-scope">
				<style type="text/css" class="ng-scope">
					.pagination>li>span:hover{background-color: #fff;cursor:text}
				</style>
			</ng-include>
		  </div>	
	</div>
</div>

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h3 class="modal-title">退款历史</h3>
</div>
<div class="modal-body form-horizontal">
    <div class="panel panel-default">
        <div class="panel-heading">
            退款历史列表
        </div>
        <div class="panel-body p-b-none p-t-none" style="max-height: 700px; overflow-y: scroll;">
            <table class="table table-striped table-hover m-b-none" style="margin-top: 10px; color: #999999;">
                <thead class="title">
                    <tr>
                        <th style="width: 50px;">序号</th>
                        <th>退款金额</th>
                        <th>退款备注信息</th>
                        <th>退款日期</th>
                        <th>退款操作人</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="!pageModel.data || pageModel.data.length == 0">
                        <td colspan="100" class="text-center">暂无记录</td>
                    </tr>
                    <tr ng-repeat="item in pageModel.data track by $index" style="color: #333333;">
                        <td style="width: 50px;">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                        <td>{{item.amount?'￥'+item.amount.toFixed(2):'--'}}</td>
                        <td>{{item.remark}}</td>
                        <td>{{item.refundDate | date: 'yyyy-MM-dd'}}</td>
                        <td>{{item.nickName}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="page-footer clearfix">
            <ng-include src="'/common/pager.html'" class="ng-scope">
                <style type="text/css" class="ng-scope">
                    .pagination>li>span:hover {
                        background-color: #fff;
                        cursor: text
                    }
                </style>
            </ng-include>
        </div>
    </div>
</div>
<div class="modal-footer" style="text-align: center;">
    <!-- <button class="btn btn-success btn-lg" ng-click="save()">确认</button> -->
    <button class="btn btn-danger btn-lg" ng-click="cancel()">关闭</button>
</div>
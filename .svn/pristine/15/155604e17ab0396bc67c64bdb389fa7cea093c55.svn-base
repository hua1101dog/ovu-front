<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="productDatabase/style/css/custom.css">
    <link rel="stylesheet" href="propertyCharges/propertyCharge.css">
</head>

<body>
    <div id="angularId" ng-controller="chargeCategorySetCtrl">
        <div class="page-title">
            <div class="title_left">
                <h3>收费项目类别管理</h3>
            </div>
        </div>
        <div class="chargeCategorySet">
            <div class="panel panel-default">
                <div class="panel-heading">
                    收费项目类别列表
                    <button class="btn btn-primary pull-right" ng-click="chargeEdit()">新增</button>
                </div>
                <div class="panel-body p-b-none p-t-none">
                    <table class="table table-striped table-hover m-b-none" style="margin-top: 10px; color: #999999;">
                        <thead class="title">
                            <tr>
                                <th>No.</th>
                                <!-- <th>
                                    <input type="checkbox" ng-model="allState" ng-change="chooseAll(allState)">
                                </th> -->
                                <th>收费类别名称</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-if="!pageModel.data  || pageModel.data.length == 0">
                                <td colspan="100" class="text-center">暂无记录</td>
                            </tr>
                            <tr ng-repeat="item in pageModel.data track by $index" style="color: #333333;">
                                <td>{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                                <!-- <td>
                                    <input type="checkbox" ng-model="item.status" ng-change="chooseOne(item.status, $index)">
                                </td> -->
                                <td>{{item.name}}</td>
                                <td>
                                    <a href="javascript:void(0)" ng-click="chargeEdit(item)" class="btn btn-xs" style="border: 1px solid #5692ea; color: #5692ea;">编辑</a>
                                    <a href="javascript:void(0)" ng-click="chargeCancel(item)" class="btn btn-xs" style="border: 1px solid #5692ea; color: #5692ea;">删除</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="page-footer clearfix">
                        <ng-include src="'/common/pager.html'" class="ng-scope">
                            <style type="text/css" class="ng-scope">
                                .pagination>li>span:hover {
                                    background-color: #fff;
                                    cursor: text
                                }
                            </style>
                        </ng-include>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
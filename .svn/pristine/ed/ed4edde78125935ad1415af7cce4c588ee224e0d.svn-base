<div ng-controller="blockCtrl">
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="x_panel" style="margin-top: 15px">
                <div class="x_title">分组列表 <span ng-click='addTopNode()' class='btn btn-xs pull-right'><span class='fa fa-plus' ></span>分组</span>
                </div>
                <div class="x_content" style="z-index: 1;max-height: 700px; overflow: auto">
                    <div class="alert" role="alert" ng-show="coupleData.length==0">无分组信息</div>
                    <tree-view-pro node-list="block_coupleData" host="search" host-text="'text'" host-key="'groupId'" callback="selectNode" config="config"></tree-view-pro>                </div>
            </div>
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12" style="padding:0">
            <div class="page-top">
                <span style="margin-bottom: 0px">室外</span>
            </div>
            <map-block-component map_data="mapData" group-id="search.groupId" ng-if="hasPark"></map-block-component>
        </div>
    </div>
</div>
<script type="text/ng-template" id="setName.html">
<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()">×</button>
    <h4 class="modal-title">保存区块</h4>
</div>
<div class="modal-body container-fluid form-horizontal">
    <form  name="form" novalidate>
      <div class=form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12 required">区块名称:
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input type="text" name="blockName" ng-model="item.blockName" required
                maxLength="20" class="form-control col-md-7 col-xs-12" >
        </div>
    </div>

    </form>
    
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="save(form)">确定</button>
    <button class="btn btn-primary" ng-click="delete()" ng-if="item.blockId">删除区块</button>
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
</div>
</script>


<style>
    .page-top {
        margin-top: 15px;
        padding: 20px 15px;
        padding-bottom: 0px;
        height: 55px;
        border: 1px solid #E6E9ED;
        background-color: #fff;
    }

    img.imgSize {
        width: 20px;
        height: 20px;
    }

    .table>tbody>tr.checkCustom {
        background-color: #DFF0D8
    }
    
</style>
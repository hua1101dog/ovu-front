<div id="angularId" ng-controller="ruleCtl">
    <div class="page-title">
        <div class="title_left">
            <h3>视频巡查截图规则设置</h3>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">视频巡查点列表
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover" style="margin-top: 10px;">
                <thead>
                    <tr>
                        <th class="text-center">NO</th>
                        <th>点位名称</th>
                        <th>点位类型</th>
                        <th>视频监控</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="!pageModel.data  || pageModel.data.length == 0">
                        <td colspan="100" class="text-center">暂无记录</td>
                    </tr>
                    <tr ng-repeat="item in pageModel.data">
                        <td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.type | keyToValue: pointTypeDict}}</td>
                        <td>
                            <span ng-click="playVideo(item.equipmentId)"><img src="/res/img/inspection/Camera.png"
                                    style="width:28px" ng-if="item.equipmentId" /></span>
                        </td>
                        <td>{{item.createTime}}</td>
                        <td>
                            <a href='javascript:void(0)' ng-click='showLocation(item)' class='btn btn-xs'><span class='fa fa-location-arrow'></span>查看位置</a>
                            <a href='javascript:void(0)' ng-click='showEditModal(item)' class='btn btn-xs'><span class='fa fa-edit'></span>设置截图规则</a>
                            <a href='javascript:void(0)' ng-click='del(item.insPointId)' class='btn btn-xs'><span
                                class='fa fa-trash'></span>删除截图规则</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="page-footer clearfix">
                <ng-include src="'/common/pager.html'"></ng-include>
            </div>
        </div>
    </div>
</div>
<style>
   table tr th,
        table tr td {
            text-align: center;
        }
</style>
<div ng-controller="relativeCtrl">
	<div class="x_panel">
	    <div class="form-inline">
	        
	        <div class="form-group">
	            <input type="text" ng-model="search.relationName" class="form-control" placeholder="亲属姓名" />
	
			</div>
			<div class="form-group">
	            <input type="text" ng-model="search.relationTel" class="form-control" placeholder="亲属手机号码" />
	
	        </div>
	        <button class="btn btn-default" ng-click="find(1)">查询</button>
	    </div>
	</div>
	<div class="panel panel-default" style="display: grid;">
	    <div class="panel-heading">亲属信息列表
	     
	    </div>
	    <div class="panel-body" style="overflow: scroll;">
	        <table class="table table-striped table-hover" style="margin-top: 10px;">
	            <thead>
	                <tr>
	                    <th class="text-center">NO</th>
	                  
	                    <th  nowrap="nowrap">房屋名称</th>
	                    <th  nowrap="nowrap">亲属姓名</th>
	                    <th  nowrap="nowrap">亲属电话</th>
	                    <th  nowrap="nowrap">亲属身份证号</th>
	                    <th  nowrap="nowrap">亲属关系</th>
	                    <th  nowrap="nowrap">业主姓名</th>
	                    <th  nowrap="nowrap">业主电话</th>
	             
	                </tr>
	            </thead>
	            <tbody>
	                <tr ng-if="!relative_pageModel.data  || relative_pageModel.data.length == 0">
	                    <td colspan="100" class="text-center">暂无记录</td>
	                </tr>
	                <tr ng-repeat="item in relative_pageModel.data">
	                    <td class="text-center">{{$index + 1+relative_pageModel.pageSize*relative_pageModel.pageIndex}}</td>
	                    <!-- <td><i role="button" ng-click="checkOne(item,relative_pageModel)" ng-class="{'glyphicon-check':item.checked,'glyphicon-unchecked':!item.checked}" class="glyphicon"></i></td> -->
	                    <td>{{item.houseName}}</td>
	                    <td>{{item.relationName}}</td>
	                    <td>{{item.relationTel}}</td>
	                    <td>{{item.relationIdCard}}</td>
	                    <td>{{item.relationRole =="0" ? "父母":(item.relationRole =="1"?"子女":"其他")}}</td>
	                    <td>
                        	<span ng-repeat="v in item.ownerName track by $index" style="display:block">{{v}}</span>
                    	</td>
                    	<td>
                        	<span ng-repeat="v in item.ownerPhone track by $index" style="display:block">{{v}}</span>
                    	</td>
	                </tr>
	
	            </tbody>
	        </table>
	        <div class="page-footer clearfix">
				<page-pro page-model="relative_pageModel"></page-pro>
	        </div>
	    </div>
	</div>
</div>

<div class="modal-header">
    <button class="close" type="button" ng-click="$ctrl.cancel()">×</button>
    <h4 class="modal-title" id="modal-title">{{$ctrl.title}}</h4>
</div>
<div class="modal-body edit-contact text-center" id="modal-body">
    <form name="editForm" novalidate="" style="margin:0 100px">
        <div class="form-group clearfix">
            <label for="projectName" class="col-sm-4 control-label required text-right">收费项目名称：</label>
            <div class="col-sm-8">
                <input type="text" id="projectName" class="form-control" required ng-trim="false" auto-focus="true" ng-model="$ctrl.item.name">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="price" class="col-sm-4 control-label required text-right">价格：</label>
            <div class="col-sm-8">
                <input type="text" id="price" class="form-control" required ng-trim="false" ng-model="$ctrl.item.price">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="priceUnit" class="col-sm-4 control-label required text-right">计费单位：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" required id="priceUnit" ng-model="$ctrl.item.priceUnit" onchange="">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="priceCycle" class="col-sm-4 control-label required text-right">计费周期：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" required id="priceCycle" ng-model="$ctrl.item.priceCycle" onchange="">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="priceCycleType" class="col-sm-4 control-label required text-right">计费周期类型：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" required id="priceCycleType" ng-model="$ctrl.item.priceCycleType" onchange="">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="chargeMethod" class="col-sm-4 control-label required text-right">收费方式：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" required id="chargeMethod" ng-model="$ctrl.item.chargeMethod" onchange="">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="billMethod" class="col-sm-4 control-label required text-right">计费方式：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" required id="billMethod" ng-model="$ctrl.item.billMethod" onchange="">
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="isMultiTier" class="col-sm-4 control-label required text-right">是否启用阶梯价格：</label>
            <div class="col-sm-8">
                <select id="isMultiTier" class="form-control" required ng-model="$ctrl.item.isMultiTier" ng-options="x[0] as x[1] for x in [[1,'是'], [0,'否']]">
                    <option value="">--请选择--</option>
                </select>
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="isOverdue" class="col-sm-4 control-label required text-right">是否缴纳滞纳金：</label>
            <div class="col-sm-8">
                <select id="isOverdue" class="form-control" required ng-model="$ctrl.item.isOverdue" ng-options="x[0] as x[1] for x in [[1,'是'], [0,'否']]">
                    <option value="">--请选择--</option>
                </select>
            </div>
        </div>
        <div class="form-group clearfix">
            <label for="isRequired" class="col-sm-4 control-label required text-right">是否必填：</label>
            <div class="col-sm-8">
                <select id="isRequired" class="form-control" required ng-model="$ctrl.item.isRequired" ng-options="x[0] as x[1] for x in [[1,'是'], [0,'否']]">
                    <option value="">--请选择--</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" type="button" ng-click="$ctrl.ok(editForm)">确定</button>
    <button class="btn btn-warning" type="button" ng-click="$ctrl.cancel()">取消</button>
</div>